.row
  .col-md-1
    .circle
  .col-md-11
    .agent-content
      span
        strong= name
      span(style="margin: 0 5px;color:gray;") |
      span= status
      span(style="margin: 0 5px;color:gray;") |
      span= ip
      span(style="margin: 0 5px;color:gray;") |
      span= filePath
    div
      i.fa.fa-plus.add-resource(data-modal=".specify-resources")
        u Specify Resources
      span(style="margin: 0 5px;color:gray;") | 
      span Resources:
        if resources
          for r in resources.split(',')
            span= r
              i.fa.fa-times-circle.del-resource(data-resource="#{r}")